{
  "swc": true,
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types"],
    "lib": ["ES2021.String"],
    "outDir": "./dist",
    "noEmitOnError": false
  },

  "include": ["*", "src/*.ts"],
  "exclude": ["**/*.spec.ts"]
}
