{
  "swc": true,
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types"],
    "lib": ["ES2021.String", "es2015", "dom"],
    "outDir": "./dist",
    "noEmitOnError": false,
    "declaration": true,
    "strict": true
  },

  "include": ["*", "src/*.ts", "src/**/*.ts"],
  "exclude": ["**/*.spec.ts"]
}
